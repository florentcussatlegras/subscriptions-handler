generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")  // <- ton .env doit avoir DATABASE_URL
}

model Subscription {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  plan      String
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
}
